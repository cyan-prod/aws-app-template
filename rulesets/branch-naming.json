{
  "name": "branch naming convention",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": ["~ALL"],
      "exclude": ["refs/heads/main", "refs/heads/dev"]
    }
  },
  "rules": [
    {
      "type": "branch_name_pattern",
      "parameters": {
        "name": "Branch naming: type/jira-123 (lowercase, kebab-case)",
        "negate": false,
        "operator": "regex",
        "pattern": "^refs/heads/[a-z]+/[a-z0-9]+(-[a-z0-9]+)*$"
      }
    }
  ],
  "bypass_actors": []
}
